meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Login
link(rel="stylesheet", href="/css/login.css")

.login-container
  h1 Login

  // Display flash messages
  if error_msg.length
    ul.error-list
      each err in error_msg
        li= err
  if success_msg.length
    ul.success-list
      each msg in success_msg
        li= msg

  // Login form
  form#loginForm(action="/login" method="POST")
    .form-group
      label(for="username") Email or Username
      input#username(type="text" name="username" placeholder="Enter your email")

      .error-message#emailError
    .form-group
      label(for="password") Password
      .password-wrapper
        input#password(type="password" name="password" placeholder="Enter your password")
        span.eye-icon#togglePassword
      .error-message#passwordError
    button(type="submit") Login

  .signup-link
    | Don't have an account? 
    a(href="/signup") Sign up

script(src="/js/login.js")
